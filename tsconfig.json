{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@app/*": [
        "src/*"
      ],
      "@config/*": [
        "config/*"
      ],
      "@libs/boat": [
        "libs/boat/src"
      ],
      "@libs/boat/*": [
        "libs/boat/src/*"
      ],
      "@libs/database": [
        "libs/database/src"
      ],
      "@libs/database/*": [
        "libs/database/src/*"
      ],
      "@lib/users": [
        "libs/users/src"
      ],
      "@lib/users/*": [
        "libs/users/src/*"
      ],
      "libs/common": [
        "libs/common/src"
      ],
      "libs/common/*": [
        "libs/common/src/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}